<Page x:Class="CleaningCompany.Vibor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CleaningCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="DarkCyan"
      Title="Vibor">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="ViborTab"  Grid.ColumnSpan="3" Grid.RowSpan="5" Grid.Column="0"  Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <ComboBox x:Name="ViborTabl" Grid.Column="1" SelectionChanged="ViborTabl_SelectionChanged"/>
        <Button x:Name="Auth" Grid.Column="0" Content="Вернуться к авторизации" Click="Auth_Click"/>
    </Grid>
</Page>
